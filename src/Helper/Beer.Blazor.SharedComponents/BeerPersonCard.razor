<AuthorizeView>
    <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Image="@context.User.GetClaimsValue("picture")" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@context.User.GetClaimsValue("preferred_username")</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
</AuthorizeView>

@code {

    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}
