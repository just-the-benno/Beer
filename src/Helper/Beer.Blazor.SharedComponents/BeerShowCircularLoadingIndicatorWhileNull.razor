<BeerShowLoadingIndicatorWhileNull Item="@Item" Items="@Items" IsSingle="@IsSingle" ChildContent="@ChildContent">
    <LoadingContent>
        <MudPaper Class="pa-10 d-flex flex-column align-center">
            <MudProgressCircular Class="mb-5" Color="Color.Primary" Indeterminate="true" />
            <MudText Typo="Typo.body1">@Text</MudText>
        </MudPaper>
    </LoadingContent>
</BeerShowLoadingIndicatorWhileNull>

@code {
    [Parameter] public Object Item { get; set; }
    [Parameter] public IEnumerable<Object> Items { get; set; }
    [Parameter] public Boolean IsSingle { get; set; } = true;

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter]
    public String Text { get; set; }

}
