@model LogoutViewModel
@inject IViewLocalizer localizer

<div>
    <div class="mdl-card__title mdl-color-text--primary text-center">
        <h2 class="mdl-card__title-text flex-fill">@localizer["LogoutHeadline"]</h2>
    </div>

    <div class="mdl-card__supporting-text">
        <p>@localizer["LogoutQuestion"]</p>
        <form asp-action="Logout">
            <input type="hidden" name="logoutId" value="@Model.LogoutId" />
            <div class="align-horizontal-left">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect">
                    @localizer["LogoutButtonCaption"]
                </button>
            </div>
        </form>
    </div>
</div>

   
