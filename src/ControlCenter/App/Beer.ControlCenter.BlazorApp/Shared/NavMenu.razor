@inject IStringLocalizer<NavMenu> L

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">@L["DashboardCaption"]</MudNavLink>
    <MudNavLink Href="@UrlManager.UserOverview" Match="NavLinkMatch.Prefix" Icon="fas fa-users">@L["UserOverviewCaption"]</MudNavLink>
    <MudNavLink Href="@UrlManager.ClientOverview" Match="NavLinkMatch.Prefix" Icon="fas fa-desktop">@L["ClientOverviewCaption"]</MudNavLink>
    @if (AppEntries != null && AppEntries.Any() == true)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 mb-2 mt-5">@L["BeerAppsCaption"]</MudText>
        @foreach (var item in AppEntries)
        {
            <MudNavLink Href="@item.Url" Target="_blank" Icon="@item.Icon">@item.Name</MudNavLink>
        }
    }
</MudNavMenu>

@code {

    [Parameter] public IEnumerable<AppLinkEntry> AppEntries { get; set; }
}