@inherits MudPicker<TimeSpan?>

@Render

@code{

    protected override RenderFragment PickerContent =>
    @<CascadingValue Value="@this" IsFixed="true">
        <MudPickerContent>
            <div class="d-flex flex-row justify-space-around">
                @foreach (var item in _fields)
                {
                    <div class="d-flex flex-column">
                        <MudIconButton Icon="@Icons.Material.Filled.ArrowUpward"  @onmousedown="@GetStartIncreaseTimerCallback(item)" @onmouseup="StopCouter"  Style="align-self: center;" />
                        <div class="d-flex flex-row">
                            <MudText Typo="Typo.h2">@GetTimeSpanValue(item)</MudText>
                            <MudText Typo="Typo.subtitle2" Style=" align-self: flex-end; margin-bottom: 10px;">@GetTimeUnitDisplay(item)</MudText>
                        </div>
                        <MudIconButton Icon="@Icons.Material.Filled.ArrowDownward"  @onmousedown="@GetStartDecreaseTimerCallback(item)" @onmouseup="StopCouter" Style="align-self: center;" />
                    </div>
                }
            </div>
        </MudPickerContent>
    </CascadingValue>
    ;

}