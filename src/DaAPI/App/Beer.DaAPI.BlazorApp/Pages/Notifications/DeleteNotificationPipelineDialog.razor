@inherits DaAPIDialogBase
@inject IStringLocalizer<DeleteNotificationPipelineDialog> L
@inject IStringLocalizer<SharedRessources> LShared

@inject DaAPIService _service


<MudDialog>
    <DialogContent>
        @if (_hasErrors == true)
        {
            <MudAlert Class="mb-5" Severity="Severity.Error">@L["DeleteErrorMessage"]</MudAlert>
        }

        <MudText Typo="Typo.body1">@L["DeleteQuestion"]</MudText>
        <MudText Typo="Typo.h6">@Entry.Name</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LShared["NoCaption"]</MudButton>
        <BeerSendingAwareButton ButtonType="ButtonType.Button" OnClick="SendDeleteRequest" DefaultText="@LShared["YesCaption"]" InProgressText="@L["DeleteButtonExecutingCaption"]" IsExecuting="_sendingInProgress" />
    </DialogActions>
</MudDialog>

